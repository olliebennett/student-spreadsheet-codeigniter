# ----------------------------------------------------------------------
# Remove index.php
# ----------------------------------------------------------------------
RewriteEngine on
RewriteCond $1 !^(index\.php|assets|captcha|robots\.txt)
RewriteRule ^(.*)$ /index.php/$1 [L]

# ----------------------------------------------------------------------
# Custom Error Pages
# ----------------------------------------------------------------------
ErrorDocument 404 /errors/error_404.php